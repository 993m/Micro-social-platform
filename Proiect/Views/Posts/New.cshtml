<h2>Adaugare postare</h2>
<br />

<form method="post" action="/Posts/New/">
    <label>Titlul postarii</label>
    <input type="text" name="Title" />
    <br />
    <br />

    <label>Continutul postarii</label>
    <input type="text" name="Content" />
    <br />
    <br />

    <label>Selecteaza categoria</label>
    <select name="CategoryId">

         @foreach(var item in ViewBag.Categories)
        {
            <option value="@item.Id">@item.CategoryName</option>
        }

    </select>

    <br />
    <br />

    <input type="hidden" name="Date" value="@DateTime.Now" />

    <input type="hidden" name="GroupId" value="@ViewBag.group" />

    <button class="btn btn-primary" type="submit">Adauga postarea</button>

</form>