@model Proiect.Models.Post

<h2>Editare postare</h2>
<br />


@using (Html.BeginForm(actionName: "Edit", controllerName: "Posts", method: FormMethod.Post, routeValues: new { id = Model.Id }))
{
    @Html.Label("Title", "Titlul postarii")
    <br />
    @Html.Editor("Title", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessage("Title", null, new { @class = "text-danger" })
    <br /> <br />

    @Html.Label("Content", "Continutul postarii")
    <br />
    @Html.Editor("Content", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessage("Content", null, new { @class = "text-danger" })
    <br /> <br />

    @Html.Label("CategoryId", "Selectati categoria")
    <br />
    @Html.DropDownList("CategoryId", new SelectList(Model.Categ, "Value", "Text"), "Categorii", new { @class = "form-control" })
    @Html.ValidationMessage("CategoryId", null, new { @class = "text-danger" })
    <br /> <br />

    @if (Model.User != null)
    {
        <div class="card-text"><i class="bi bi-person-workspace"></i> @Model.User.UserName</div>
    }
    <br /> <br />

    <button class="btn btn-primary" type="submit">Modifica postarea</button>
}