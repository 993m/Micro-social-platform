<h2>Editare postare</h2>
<br />

<form method="post" action="/Posts/Edit/@ViewBag.Post.Id">

    <label>Titlul postarii</label>
    <input type="text" name="Title" value="@ViewBag.Post.Title">
    <br />
    <br />

    <label>Continutul postarii</label>
    <input type="text" name="Content" value="@ViewBag.Post.Content">
    <br />
    <br />

    <label>Selecteaza categoria</label>
    <select name="CategoryId">

        @foreach (var category in ViewBag.Categories)
        {
            if (category.Id == ViewBag.Category.Id)
            {
                <option selected="selected" value="@category.Id">@category.CategoryName</option>
            }
            else
            {
                <option value="@category.Id">@category.CategoryName</option>
            }
        }

    </select>
    <br />
    <br />

    <input type="hidden" name="Date" value="@DateTime.Now" />
    <br />
    <br />

    <button class="btn btn-primary" type="submit">Modifica postarea</button>

</form>