@model Proiect.Models.Category

<h3 class="alert-primary">@ViewBag.Msg</h3>


@* Formular adaugare categorie *@


<h1>Adaugare Categorie</h1>
<br />

@using (Html.BeginForm(actionName: "New", controllerName: "Categories", method: FormMethod.Post))
{
    @Html.TextBox("CategoryName", null, new { @class = "form-control", @placeholder="Numele categoriei"})
    @Html.ValidationMessage("CategoryName", null, new { @class = "text-danger" })
    <br /><br />
    
    @Html.TextArea("Description", null, new { @class = "form-control", @placeholder="Descrierea categoriei" })
    <br />

    <button class="btn btn-primary" type="submit">Adauga categoria</button>
}

<br />
<br />
<br />



<h1>Afisare categorii</h1>
<br />

@* Afisare categorii *@

@foreach (var category in ViewBag.Categories)
{
    <div class="d=flex justify-content-around">
        <div>
            <p class="card-title fw-bold">@category.CategoryName</p>
            <div class="card-text">@category.Description</div>
        </div>

    @if (ViewBag.AfisareButoane)
    {
        <div>

            <a class="btn btn-primary" href="/Categories/Edit/@category.Id">Editeaza categoria</a>
            <form method="post" action="/Categories/Delete/@category.Id">
                <button class="btn btn-danger" type="submit">Sterge</button>
            </form>

        </div>
    }
    </div>
    <hr />
}















