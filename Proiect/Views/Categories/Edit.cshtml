<h2>Editare categorie</h2>

<form method="post" action="/Categories/Edit/@ViewBag.Category.Id">

    <label>Numele categoriei</label>
    <br /> <input type="text" name="CategoryName" value="@ViewBag.Category.CategoryName" />
    <br /><br />

    <label>Descriere</label>
    <br /> <input type="text" name="Description" value="@ViewBag.Category.Description" />
    <br /><br />


    <button class="btn btn-primary" type="submit">Modifica categoria</button>
</form>

