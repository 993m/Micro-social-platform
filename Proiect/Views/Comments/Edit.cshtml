@model Proiect.Models.Comment

<h2>Editare comentariu</h2>
<br />

@using (Html.BeginForm(actionName: "Edit", controllerName: "Comments", method: FormMethod.Post, routeValues: new { id = Model.Id }))
{
    @Html.Display("User.UserName")
    <br /> <br />

    @Html.Label("Content", "Continutul comentariului")
    <br />
    @Html.Editor("Content", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessage("Content", null, new { @class = "text-danger" })
    <br /> <br />

    <button class="btn-primary btn-primary" type="submit">Editeaza comentariul</button>

}
