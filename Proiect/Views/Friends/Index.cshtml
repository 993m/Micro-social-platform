<h3 class="alert-primary">@ViewBag.Msg</h3>
<br />


<datalist id="users_list">
    @foreach (var user in ViewBag.AllUsers)
    {
        <option>@user</option>
    }
</datalist>

<form action="/Friends/Index">
    <div class="input-group">
        <input class="form-control" name="searchString" placeholder="Search" list="users_list"></input>
        <button class="btn btn-primary" type="submit"><i class="bi bi-search"></i></button>
    </div>
</form>



<br />

@if(ViewBag.Users != null)
{
    @foreach(var user in ViewBag.Users)
    {
        <div class="d-flex justify-content-between">
            <p><i class="bi bi-person"></i> UserName: @user.UserName</p>
            <a class="btn btn-primary" href="/ApplicationUsers/Show/@user.UserId">Vezi profilul</a>
            <a class="btn btn-primary" href="/ApplicationUsers/FriendRequest/@user.UserId">Cerere Prietenie</a>
        </div>
        <br />
    }

}

