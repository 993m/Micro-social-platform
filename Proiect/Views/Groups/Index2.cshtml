<h2>Afisare grupuri</h2>
<br />

<h3 class="alert-primary">@ViewBag.Msg</h3>


<div class="d-flex justify-content-center">

    <a class="btn btn-primary" href="/Groups/New/">Adauga grup</a>

</div>

<br />
<br />


@if(ViewBag.YourGroups != null)
{
    <h4>Create de tine</h4>
    <br />

    @foreach (Proiect.Models.Group group in ViewBag.YourGroups)
    {
        <div class="card">

            @Html.Partial("GroupInfo", group)

            <div class="card-body d-flex justify-content-center">

                <a href="/Groups/Show/@group.Id" class="btn btn-outline-primary">Afisare grup</a>

            </div>

        </div>

        <br />
        <br />
    }

    <br />
    <br />
}

@{
    var _currentPage = (int)ViewBag.CurrentPage2;
    var _perPage = (int)ViewBag.PerPage2;
    var _totalItems = (int)ViewBag.TotalItems2;
    var _totalPages = (int)Math.Ceiling((decimal)_totalItems / _perPage);
    var _controller = (string)ViewBag.Controller;
    var _action = (string)ViewBag.Action;
}


<div class="d-flex justify-content-center">
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item @(_currentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action(_action, _controller, new { page1 = ViewBag.Page1, page2 = _currentPage - 1 })">Anterior</a>
            </li>
            @for (int i = 1; i <= _totalPages; i++)
            {
                <li class="page-item @(_currentPage == i ? "active" : "")">
                    <a class="page-link" href="@Url.Action(_action, _controller, new { page1 = ViewBag.Page1, page2 = i })">@i</a>
                </li>
            }
            <li class="page-item @(_currentPage == _totalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action(_action, _controller, new { page1 = ViewBag.Page1, page2 = _currentPage + 1 })">Urmator</a>
            </li>
        </ul>
    </nav>

</div>


@if(ViewBag.Groups != null)
{
    <h4>Grupuri in care esti membru</h4>
    <br />

    @foreach (Proiect.Models.Group group in ViewBag.Groups)
    {
        <div class="card">

            @Html.Partial("GroupInfo", group)

            <div class="card-body d-flex justify-content-center">

                <a href="/Groups/Show/@group.Id" class="btn btn-outline-primary">Afisare grup</a>

            </div>

        </div>

        <br />
        <br />
    }
}



