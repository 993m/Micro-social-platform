@model Proiect.Models.Group

<h2>Editare grup</h2>
<br />


@using (Html.BeginForm(actionName: "Edit", controllerName: "Groups", method: FormMethod.Post, routeValues: new { id = Model.Id }))
{
    @Html.Label("GroupName", "Numele grupului")
    <br />
    @Html.Editor("GroupName", new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessage("GroupName", null, new { @class = "text-danger" })
    <br /> <br />


    @Html.Label("Description", "Descrierea grupului")
    <br />
    @Html.Editor("Description", new { htmlAttributes = new { @class = "form-control" } })
    <br />
    <br />

    <button class="btn btn-primary" type="submit">Modifica grupul</button>
}

